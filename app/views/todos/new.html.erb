<h1>New Todo</h1>

<%= form_with model: @todo, url: todos_path do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :completed %>
  <%= form.check_box :completed %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.submit %>
<% end %>

<%= link_to "Back", todos_path %>
